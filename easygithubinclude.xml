<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content">
	<name>plg_content_easygithubinclude</name>
	<author>&lt;a href="http://craigphillips.biz" target="_blank"&gt;Craig Phillips&lt;/a&gt;</author>
	<creationDate>May 2012</creationDate>
	<copyright>Copyright (C) 2012 Craig Phillips Pty Ltd. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@seepeoplesoftware.com</authorEmail>
	<authorUrl>http://seepeoplesoftware.com</authorUrl>
	<version>1.0.0a1</version>
	<description>PLG_EASYGITHUBINCLUDE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="githubinclude">githubinclude.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_content_githubinclude.ini</language>
		<language tag="en-GB">en-GB.plg_content_githubinclude.sys.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="inc_js" type="list"
					default="1"
					description="PLG_EASYGITHUBINCLUDE_PRETTIFY_JS_DESC"
					label="PLG_EASYGITHUBINCLUDE_PRETTIFY_JS_LABEL">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="inc_css" type="list"
					default="1"
					description="PLG_EASYGITHUBINCLUDE_CSS_DESC"
					label="PLG_EASYGITHUBINCLUDE_CSS_LABEL">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="wrapper" type="list"
					default="1"
					description="PLG_EASYGITHUBINCLUDE_WRAPPER_DESC"
					label="PLG_EASYGITHUBINCLUDE_WRAPPER_LABEL">
					<option value="1">PLG_EASYGITHUBINCLUDE_WRAPPER_CODE</option>
					<option value="2">PLG_EASYGITHUBINCLUDE_WRAPPER_CODE_INSIDE_PRE</option>
					<option value="0">PLG_EASYGITHUBINCLUDE_WRAPPER_PRE_ONLY</option>
				</field>
				<field name="theme" type="list"
					default="0"
					description="PLG_EASYGITHUBINCLUDE_PRETTIFY_THEME_DESC"
					label="PLG_EASYGITHUBINCLUDE_PRETTIFY_THEME_LABEL">
					<option value="prettify">PLG_EASYGITHUBINCLUDE_THEME_DEFAULT</option>
					<option value="desert">PLG_EASYGITHUBINCLUDE_THEME_DESERT</option>
					<option value="sunburst">PLG_EASYGITHUBINCLUDE_THEME_SUNBURST</option>
					<option value="sons-of-obsidian">PLG_EASYGITHUBINCLUDE_THEME_SONS_OF_OBSIDIAN</option>
				</field>
				<field name="force_cache" type="list"
					default="1"
					description="PLG_EASYGITHUBINCLUDE_FORCE_CACHE_DESC"
					label="PLG_EASYGITHUBINCLUDE_FORCE_CACHE_LABEL">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				
			</fieldset>

		</fields>
	</config>
</extension>
